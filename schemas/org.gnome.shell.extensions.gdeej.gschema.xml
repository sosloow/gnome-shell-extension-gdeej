<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.gdeej" path="/org/gnome/shell/extensions/gdeej/">
        <key name="serial-enabled" type="b">
            <default>true</default>
            <summary>Serial service enabled</summary>
            <description></description>
        </key>
        <key name="device-auto-detect" type="b">
            <default>true</default>
            <summary>Auto-detect serial device</summary>
            <description></description>
        </key>
        <key name="device-baud-rate" type="s">
            <default>"19200"</default>
            <summary>Baud rate of serial device</summary>
            <description></description>
        </key>
        <key name="noise-reduction" type="d">
            <default>2.5</default>
            <summary>Change the threshold before the volume starts moving</summary>
            <description></description>
            <range min="0" max="20"/>
        </key>
        <key name="device-auto-reconnect" type="b">
            <default>true</default>
            <summary>Auto-reconnect serial device</summary>
            <description></description>
        </key>
        <key name="device-path" type="s">
            <default>""</default>
            <summary>Path to the serial device</summary>
            <description></description>
        </key>
        <key name="sliders" type="aa{sv}">
            <default>[]</default>
            <summary>Array of slider configurations</summary>
        </key>
    </schema>
</schemalist>